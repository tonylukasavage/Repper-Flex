<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				autoDrawBackground="true">
	<s:Rect height="80" width="100%">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xffffff"/>
				<s:GradientEntry color="0xaaaaaa"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:SkinnableContainer height="80" width="100%">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" gap="0"/>
		</s:layout>
		<s:Label text="{data}" color="0x000000" fontWeight="bold" height="78" verticalAlign="middle" fontSize="32"/>
		<s:Rect height="2" width="100%">
			<s:fill>
				<s:SolidColor color="0x000000"/>
			</s:fill>
		</s:Rect>
	</s:SkinnableContainer>
	
	
</s:ItemRenderer>
